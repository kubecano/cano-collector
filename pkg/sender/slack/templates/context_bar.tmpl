  {
    "type": "context",
    "elements": [
      {
        "type": "mrkdwn",
        "text": "{{.AlertTypeEmoji}} Type: {{.AlertType}}"
      }
      {{- if .Cluster -}}
      ,
      {
        "type": "mrkdwn",
        "text": "Cluster: `{{.Cluster}}`"
      }
      {{- end -}}
      {{- if .Namespace -}}
      ,
      {
        "type": "mrkdwn",
        "text": "Namespace: `{{.Namespace}}`"
      }
      {{- end -}}
      {{- if .PodName -}}
      ,
      {
